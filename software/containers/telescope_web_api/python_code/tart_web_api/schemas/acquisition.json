{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "SaveFlagResponse": {
      "type": "object",
      "properties": {
        "save": {
          "type": "integer",
          "enum": [0, 1],
          "description": "Save flag: 0=disabled, 1=enabled"
        }
      },
      "required": ["save"],
      "additionalProperties": false
    },
    "SampleExponentResponse": {
      "type": "object",
      "properties": {
        "N_samples_exp": {
          "type": "integer",
          "minimum": 16,
          "maximum": 24,
          "description": "Exponent for number of samples (2^exp)"
        }
      },
      "required": ["N_samples_exp"],
      "additionalProperties": false
    }
  }
}